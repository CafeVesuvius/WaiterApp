<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MenuKortV1.Model"
             xmlns:vm="clr-namespace:MenuKortV1.ViewModel"
             x:DataType="vm:OrdrePageViewModel"
             x:Class="MenuKortV1.View.OrdrePage"
             Title="OrdrePage">
    <ScrollView>
        <VerticalStackLayout>
            <Entry
                Text="{Binding OrderName}"
                Placeholder="Navn eller bord nr."
                IsEnabled="{Binding EntryEnablerDisabler}"
                />

            <Button 
                Text="Create Order"
                Command="{Binding PostOrderCommand}"
                />

            <Label Text=""/>

            <CollectionView ItemsSource="{Binding MyOrders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Order">
                        <Button
                            Text="{Binding Name}"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrdrePageViewModel}}, Path=OpenOrderCommand}"
                            CommandParameter="{Binding .}"
                            />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>