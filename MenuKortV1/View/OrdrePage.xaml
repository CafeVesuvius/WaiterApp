<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MenuKortV1.Model"
             xmlns:vm="clr-namespace:MenuKortV1.ViewModel"
             x:DataType="vm:OrdreViewModel"
             x:Class="MenuKortV1.View.OrdrePage"
             Title="Ordre detaljer">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Start">

            <Label
                Text="Varer:"
                Margin="5"
                FontSize="20"
                FontAttributes="Bold"
                />
            <CollectionView ItemsSource="{Binding Order}">
               <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:MenuItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="45"/>
                            </Grid.ColumnDefinitions>

                            <Label
                                Text="{Binding Name}"
                                Margin="5"
                                FontSize="17"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                />

                            <Label
                                Grid.Column="1"
                                Margin="5"
                                FontSize="17"
                                Text="{Binding UnitPrice}"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                />

                            <Button
                                Grid.Column="2"
                                Text="X"
                                FontSize="20"
                                HeightRequest="45"
                                WidthRequest="45"
                                BackgroundColor="Brown"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrdreViewModel}}, Path=RemoveThisItemFromOrderCommand}"
                                CommandParameter="{Binding .}"
                                HorizontalOptions="End"
                                CornerRadius="0"
                                />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button
                Text="Nulstil"
                CornerRadius="0"
                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrdreViewModel}}, Path=ResetOrderCommand}"
                CommandParameter="{Binding Order}"
                VerticalOptions="End"
                FontSize="17"
                />

            <Label
                Text=""
                />

            <Label
                Text="Noter til ordre:"
                Margin="5"
                FontSize="20"
                FontAttributes="Bold"
                />

            <!--<Label
                Text="{Binding Note}"/>-->

            <Editor
                x:Name="ThisEditor"
                IsEnabled="{Binding NoteIsEnabled}"
                AutoSize="TextChanges"
                />

            <Button
                Text="{Binding DynamicButtonName}"
                CornerRadius="0"
                FontSize="17"
                VerticalOptions="End"
                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrdreViewModel}}, Path=ShowHideNoteFieldCommand}"
                CommandParameter="{Binding ThisEditor}"
                />
                
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>