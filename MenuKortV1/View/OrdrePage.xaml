<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MenuKortV1.Model"
             xmlns:vm="clr-namespace:MenuKortV1.ViewModel"
             x:DataType="vm:OrdrePageViewModel"
             x:Class="MenuKortV1.View.OrdrePage"
             Title="OrdrePage">
    <ScrollView>
        <VerticalStackLayout>
            <Entry 
                Text="{Binding ThisEntry.Text}"
                Placeholder="Navn eller bord nr."
                />

            <Button 
                Text="Open Order"
                Command="{Binding PostOrderCommand}"
                />

            <Label Text=""/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>