<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MenuKortV1.Model"
             xmlns:vm="clr-namespace:MenuKortV1.ViewModel"
             x:DataType="vm:OrdreViewModel"
             x:Class="MenuKortV1.View.OrdrePage"
             Title="Ordre detaljer">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Start">

            <Label
                Text="Varer"
                Margin="5"
                FontSize="20"
                FontAttributes="Bold"
                />

            <!--<Label
                Text="{Binding ChosenMenuItem.Name}"
                Margin="5"
                FontSize="20"
                />-->

            <CollectionView ItemsSource="{Binding Order}">
               <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:MenuItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label
                               Text="{Binding Name}"
                               Margin="5"
                               FontSize="20"/>

                            <Label
                                Grid.Column="1"
                                Margin="5"
                                FontSize="20"
                                Text="{Binding UnitPrice}"
                                />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <Label
                Text="{Binding FullPrice}"
                />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>